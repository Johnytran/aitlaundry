<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="username" type="text" required="true" label="COM_USEREXTRA_FORM_LBL_USER_USERNAME" description="COM_USEREXTRA_FORM_DESC_USER_USERNAME" hint="COM_USEREXTRA_FORM_LBL_USER_USERNAME"/>
    <field name="password" type="password" required="true" label="COM_USEREXTRA_FORM_LBL_USER_PASSWORD" description="COM_USEREXTRA_FORM_DESC_USER_PASSWORD" hint="COM_USEREXTRA_FORM_LBL_USER_PASSWORD"/>
    <field name="firstname" type="text" filter="raw" required="true" label="COM_USEREXTRA_FORM_LBL_USER_FIRSTNAME" description="COM_USEREXTRA_FORM_DESC_USER_FIRSTNAME" hint="COM_USEREXTRA_FORM_LBL_USER_FIRSTNAME"/>
    <field name="lastname" type="text" filter="raw" required="true" label="COM_USEREXTRA_FORM_LBL_USER_LASTNAME" description="COM_USEREXTRA_FORM_DESC_USER_LASTNAME" hint="COM_USEREXTRA_FORM_LBL_USER_LASTNAME"/>
    <field name="name" type="text" label="COM_USEREXTRA_FORM_LBL_USER_NAME" description="COM_USEREXTRA_FORM_DESC_USER_NAME" hidden="true" hint="COM_USEREXTRA_FORM_LBL_USER_NAME"/>
    <field name="homephone" type="text" label="COM_USEREXTRA_FORM_LBL_USER_HOMEPHONE" description="COM_USEREXTRA_FORM_DESC_USER_HOMEPHONE" hint="COM_USEREXTRA_FORM_LBL_USER_HOMEPHONE"/>
    <field name="mobilephone" type="text" label="COM_USEREXTRA_FORM_LBL_USER_MOBILEPHONE" description="COM_USEREXTRA_FORM_DESC_USER_MOBILEPHONE" hint="COM_USEREXTRA_FORM_LBL_USER_MOBILEPHONE"/>
    <field name="address" type="text" size="200" label="COM_USEREXTRA_FORM_LBL_USER_ADDRESS" description="COM_USEREXTRA_FORM_DESC_USER_ADDRESS" hint="COM_USEREXTRA_FORM_LBL_USER_ADDRESS"/>
    <field name="email" type="text" required="true" label="COM_USEREXTRA_FORM_LBL_USER_EMAIL" description="COM_USEREXTRA_FORM_DESC_USER_EMAIL" hint="COM_USEREXTRA_FORM_LBL_USER_EMAIL"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_USEREXTRA_FORM_LBL_USER_CREATED_BY" description="COM_USEREXTRA_FORM_DESC_USER_CREATED_BY" hidden="true" hint="COM_USEREXTRA_FORM_LBL_USER_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_USEREXTRA_FORM_LBL_USER_MODIFIED_BY" description="COM_USEREXTRA_FORM_DESC_USER_MODIFIED_BY" hidden="true" hint="COM_USEREXTRA_FORM_LBL_USER_MODIFIED_BY"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
